{
  "name": "phoebe-ui",
  "version": "0.1.0",
  "private": true,
  "description": "Minimal, accessible React components built on Radix UI and Tailwind CSS",
  "keywords": [
    "react",
    "components",
    "ui",
    "radix",
    "tailwind",
    "accessibility"
  ],
  "repository": "https://github.com/siamjuit/phoebe-ui",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm run --filter './packages/*' build",
    "build:site": "pnpm run --filter apps/site build",
    "dev": "pnpm run --filter apps/site dev",
    "dev:storybook": "pnpm run --filter apps/site storybook",
    "test": "pnpm run --recursive test",
    "test:coverage": "pnpm run --recursive test:coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "typecheck": "pnpm run --recursive typecheck",
    "clean": "pnpm run --recursive clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "packageManager": "pnpm@8.15.1"
}
